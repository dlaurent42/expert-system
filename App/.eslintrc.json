{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "plugins": [
    "react"
  ],
  "extends": [
    "eslint:recommended",
    "airbnb",
    "plugin:react/recommended"
  ],
  "rules": {
    "no-loop-func": 0,
    "comma-dangle": 0,
    "react/jsx-uses-vars": 1,
    "padded-blocks": 0,
    "react/display-name": 1,
    "no-unused-vars": "warn",
    "no-console": 0,
    "no-unexpected-multiline": "warn",
    "react/destructuring-assignment": "off",
    "react/prop-types": [
      1,
      {
        "ignore": [
          "children",
          "history",
          "location",
          "match"
        ]
      }
    ]
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "15.6.1"
    }
  },
  "globals": {
    "document": true,
    "window": true,
    "navigator": true
  }
}